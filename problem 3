// PLEASE PRESS ENTER AFTER ENTER 1 CHARACTER


#include <iostream>

using namespace std;

int main()
{
    int x;
	char arr[x];
	int a;
	int b;
	int c;
	int swapval;
	
	cout<<"Enter Array size: ";cin>> x;
	for(int i = 0; i < x; i++)
	{
	    cin>> arr[i];
	}
	if(x%2==0)
	{
	    for(int i = 0; i < x/2; i++)
	    {
	        swapval = arr[x - 1 - i];
	        arr[x - 1 - i] = arr[i];
	        arr[i] = swapval;
	    }
	    cout<<"The mirror of the entered characters is: ";
	    for(int i = 0; i < x; i++)
	    {
	        cout<<arr[i]<<endl;
	    }
	}
	else
	{
	    for(int i = 0; i < x; i++)
	    {
	        swapval = arr[x - 1 - i];
	        arr[x - 1 - i] = arr[i];
	        arr[i] = swapval;
	        
	    }
	    cout<<"The mirror of the entered characters is: ";
	    for(int i = 0; i < x; i++)
	    {
	        cout<<arr[i]<<endl;
	    }
	}
	return 0;

}
