#include<iostream>
#include<conio.h>
using namespace std;

int
main ()
{
  // Province A values
  int a1, a2, a3, a4, a5, a6, a7;
  // Province B values
  int b1, b2, b3, b4, b5, b6, b7;
  // Province C values
  int c1, c2, c3, c4, c5, c6, c7;
  
  // Input values Province A
  cout<<"Input data for Temperature Province A"<<endl;
  cout<<"Day 1: "; cin>> a1;
  cout<<"Day 2: "; cin>> a2;
  cout<<"Day 3: "; cin>> a3;
  cout<<"Day 4: "; cin>> a4;
  cout<<"Day 5: "; cin>> a5;
  cout<<"Day 6: "; cin>> a6;
  cout<<"Day 7: "; cin>> a7;
  
  // Input values Province B
  cout<<"Input data for Temperature Province B"<<endl;
  cout<<"Day 1: "; cin>> b1;
  cout<<"Day 2: "; cin>> b2;
  cout<<"Day 3: "; cin>> b3;
  cout<<"Day 4: "; cin>> b4;
  cout<<"Day 5: "; cin>> b5;
  cout<<"Day 6: "; cin>> b6;
  cout<<"Day 7: "; cin>> b7;
  
  // Input values Province C
  cout<<"Input data for Temperature Province C"<<endl;
  cout<<"Day 1: "; cin>> c1;
  cout<<"Day 2: "; cin>> c2;
  cout<<"Day 3: "; cin>> c3;
  cout<<"Day 4: "; cin>> c4;
  cout<<"Day 5: "; cin>> c5;
  cout<<"Day 6: "; cin>> c6;
  cout<<"Day 7: "; cin>> c7;
  // Array declaration
  // Array A
  int A[7] = { a1, a2, a3, a4, a5, a6, a7 };
  // Array B
  int B[7] = { b1, b2, b3, b4, b5, b6, b7 };
  // Array C
  int C[7] = { c1, c2, c3, c4, c5, c6, c7 };
  
  //Province A output
  cout<<"Province A Data:"<<endl;
  cout<<"Province A, Day 1 = "<<A[0]<<endl;
  cout<<"Province A, Day 2 = "<<A[1]<<endl;
  cout<<"Province A, Day 3 = "<<A[2]<<endl;
  cout<<"Province A, Day 4 = "<<A[3]<<endl;
  cout<<"Province A, Day 5 = "<<A[4]<<endl;
  cout<<"Province A, Day 6 = "<<A[5]<<endl;
  cout<<"Province A, Day 7 = "<<A[6]<<endl;
  
  //Province B output
  cout<<"Province B Data:"<<endl;
  cout<<"Province B, Day 1 = "<<B[0]<<endl;
  cout<<"Province B, Day 2 = "<<B[1]<<endl;
  cout<<"Province B, Day 3 = "<<B[2]<<endl;
  cout<<"Province B, Day 4 = "<<B[3]<<endl;
  cout<<"Province B, Day 5 = "<<B[4]<<endl;
  cout<<"Province B, Day 6 = "<<B[5]<<endl;
  cout<<"Province B, Day 7 = "<<B[6]<<endl;
  
  //Province C output
  cout<<"Province C Data:"<<endl;
  cout<<"Province C, Day 1 = "<<C[0]<<endl;
  cout<<"Province C, Day 2 = "<<C[1]<<endl;
  cout<<"Province C, Day 3 = "<<C[2]<<endl;
  cout<<"Province C, Day 4 = "<<C[3]<<endl;
  cout<<"Province C, Day 5 = "<<C[4]<<endl;
  cout<<"Province C, Day 6 = "<<C[5]<<endl;
  cout<<"Province C, Day 7 = "<<C[6]<<endl;
  
  return 0;
  
}
